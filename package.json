{
    "name": "macro-pad",
    "productName": "macro-pad",
    "version": "1.0.0",
    "description": "A GUI implementation of my custom macro pad software (optimised for the akai APC mini) but should work with other midi controllers!",
    "main": "src/index.js",
    "scripts": {
        "start": "electron-forge start",
        "make": "electron-forge make",
        "publish": "electron-forge publish",
        "lint": "echo \"No linting configured\"",
        
        "package": "electron-forge package",
        "package-mac": "electron-forge package --platform darwin",
        "package-deb": "electron-forge package --platform linux --targets deb",
        "package-linux": "electron-forge package --platform linux",

        "package-all": "npm run package && npm run package-mac && npm run package-deb && npm run package-linux"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/TheTrueGravity/macro-pad.git"
    },
    "keywords": [
        "macropad",
        "macro-pad",
        "midi",
        "typescript",
        "ts",
        "electron"
    ],
    "author": {
        "name": "Charlie",
        "email": "75177875+TheTrueGravity@users.noreply.github.com"
    },
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/TheTrueGravity/macro-pad/issues"
    },
    "homepage": "https://github.com/TheTrueGravity/macro-pad#readme",
    "config": {
        "forge": {
            "packagerConfig": {},
            "makers": [
                {
                    "name": "@electron-forge/maker-squirrel",
                    "config": {
                        "name": "macro-pad"
                    }
                },
                {
                    "name": "@electron-forge/maker-zip",
                    "platforms": [
                        "darwin"
                    ]
                },
                {
                    "name": "@electron-forge/maker-deb",
                    "config": {}
                },
                {
                    "name": "@electron-forge/maker-rpm",
                    "config": {}
                }
            ]
        }
    },
    "dependencies": {
        "@electron/remote": "^1.2.2",
        "electron-squirrel-startup": "^1.0.0"
    },
    "devDependencies": {
        "@electron-forge/cli": "^6.0.0-beta.54",
        "@electron-forge/maker-deb": "^6.0.0-beta.54",
        "@electron-forge/maker-rpm": "^6.0.0-beta.54",
        "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
        "@electron-forge/maker-zip": "^6.0.0-beta.54",
        "electron": "12.0.7",
        "electron-reloader": "^1.2.1"
    }
}
